<br>
<div class="container" id="toolcard-detail">
  <h1><%= @tool.name %></h1>
  <br>
  <div class="toolcard-image">
    <%= cl_image_tag @tool.photos.first.key, class: "toolcard-image", crop: :thumb%>
  </div>
  <div>
    <div class="info">
      <p><%= @tool.description %></p>
    </div>
    <div class="prices">
      <p><%= @tool.price_day %> $</p>
      <p><%= @tool.price_deposit %> $</p>
      <div class="container my-5">
        <div class="row">
          <div class="col-4 mx-auto">
            <%= simple_form_for [@tool, @booking] do |f| %>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
            <%= f.submit %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>


  <a href=""><%= link_to "BOOK NOW", root_path, class: "btn btn-search" %></a>
  <br>

  <br>
  <div class="link">
    <br>

  </div>
</div>
