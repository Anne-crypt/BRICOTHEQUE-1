<br>
<div class="container" id="tool-detail">
  <h1><%= @tool.name %></h1>
  <br>
  <div class="tool-image">
    <%= cl_image_tag @tool.photos.first.key, class: "tool-image", crop: :thumb%>
  </div>
  <div>
    <div class="info">
      <p><%= @tool.description %></p>
    </div>
    <div class="prices">
      <p><%= @tool.price_day %> $</p>
      <p><%= @tool.price_deposit %> $</p>
    </div>
  </div>
  <a href=""><%= link_to "BOOK NOW", new_tool_booking_path(@tool), class: "btn btn-gradient" %></a>
  <br>

  <br>
  <div class="link">
    <br>
    <%= link_to "Back to list", "/tools?category=#{@tool.category}", class: "back-list" %>
    <%= link_to "Edit a tool", edit_tool_path(@tool), class: "tool-edit" %>
    <%= link_to "Back to home", root_path, class: "back-home" %>
  </div>
</div>
