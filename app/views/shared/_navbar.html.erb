  <div class="navbar sticky-nav navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to root_path, class: "navbar-brand" do %>
      <i class="fas fa-home"></i>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto" id="navbar-div">
        <li class="nav-item active">
          <% if user_signed_in? %>
            <li id="current-email">Welcome back <%= current_user.first_name %>!</li>
          <% else %>
            <li id="current-email"><strong>Welcome! Please consider to Register!</strong></li>
            <li><%= link_to 'Sign in', new_user_session_path, class: "dropdown-item text-center" %></li>
            <li><%= link_to 'Register', new_user_registration_path, class: "dropdown-item text-center" %></li>
          <% end %>

          <li class="nav-item"></li>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "See all tools", tools_path, class: "dropdown-item text-center" %>
              <%= link_to "See my bookings", "#", class: "dropdown-item text-center" %>
              <%= link_to "See my tools", "#", class: "dropdown-item text-center" %>

              <% if user_signed_in? %>
               <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "dropdown-item text-center" %>
              <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>
