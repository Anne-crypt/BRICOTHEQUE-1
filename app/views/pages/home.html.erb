  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path("home_tool_rizjqh", crop: :fill )%>');">
      <div>
        <h1>BRICOTHEQUE</h1>
        <p>Find the perfect tool, right next to you !</p>
        <%= simple_form_for :search, url: tools_path, method: :get do |f| %>
          <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-search">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        <% end %>
      </div>
  </div>

  <br>
  <div class="container container-cards">
    <div class="cards">

      <div class="card-category-home image-home">
          <%= link_to tools_path(category: "garden") do %>
            <div class="position-text" style="background: linear-gradient(307deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.6) 0%), url('<%= image_path('gardening.webp') %>'); background-size: cover; height: 100%;">
              <p id="category-name">Garden</p>
            </div>
          <% end %>
      </div>

      <div class="card-category-home image-home">
        <%= link_to tools_path(category: "machinery") do %>
          <div class="position-text" style="background: linear-gradient(307deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.6) 0%), url('<%= image_path('machinery.jpeg') %>'); background-size: cover; height: 100%;">
            <p id="category-name">Machinery</p>
          </div>
        <% end %>
      </div>

      <div class="card-category-home image-home">
        <%= link_to tools_path(category: "home") do %>
          <div class="position-text" style="background: linear-gradient(307deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.6) 0%), url('<%= image_path('home_tool.png') %>'); background-size: cover; height: 100%;">
            <p id="category-name">Home</p>
          </div>
        <% end %>
      </div>

      <div class="card-category-home image-home">
        <%= link_to tools_path(category: "mechanic") do %>
          <div class="position-text" style="background: linear-gradient(307deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.6) 0%), url('<%= image_path('my-mechanic.jpeg') %>'); background-size: cover; height: 100%;">
            <p id="category-name">Mechanic</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <ul class="toolcards">
      <% @tools.each do |tool|%>
        <li>
          <%= link_to tool_path(tool), class:"toolcard" do %>
            <div class="toolcard__image" alt="">
              <% if tool.photos.attached? %>
                <%= cl_image_tag(tool.photos.first.key, class: "toolcard_image", crop: :scale) %>
              <% end %>
            </div>
            <div class="toolcard__overlay">
              <div class="toolcard__header">
                <svg class="toolcard__arc"><path class d = "M 40 80 c 22 0 40 -22 40 -40 v 40 Z" /></svg>
                <div class="avatar toolcard__thumb">
                  <% case tool.category %>
                  <% when Tool::CATEGORIES[0]%>
                    <%= cl_image_tag('jhm0dvyrpritzt8c8qmbgldzum3r',borderradius: 50, width: 50, crop: :fill, gravity: :face)%>
                  <% when Tool::CATEGORIES[1]%>
                  <% when Tool::CATEGORIES[2]%>
                  <% when Tool::CATEGORIES[3]%>
                  <% end %>
                </div>
                <div class="toolcard__header-text">
                  <h3 class="toolcard__title"><%=tool.name%></h3>
                  <span class="toolcard__status">price per day: â‚¬<%=(tool.price_day).round(2)%></span>
                </div>
              </div>
              <p class="toolcard__description"><%=tool.description %></p>
            </div>
          <% end %>
        </li>

      <% end %>
    </ul>
  </div>
